<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_AssetList"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:orientation="vertical"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLayout_Asset"
        android:layout_width="328dp"
        android:layout_height="276dp"
        android:background="@drawable/kotakputihdenganshadow"
        android:elevation="15dp">


        <ImageView
            android:id="@+id/iv_AssetImage"
            android:layout_width="328dp"
            android:layout_height="122dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_AssetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="136dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="AssetName"
            android:textColor="#015478"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_AssetShortDesc"
            android:layout_width="172dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="176dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_AssetDetails"
            android:layout_width="111dp"
            android:layout_height="63dp"

            android:layout_marginStart="200dp"
            android:layout_marginTop="176dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/open_sans_bold"
            android:text="Details"
            android:textColor="#000000"
            app:cornerRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#000000"
            app:strokeWidth="1dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>